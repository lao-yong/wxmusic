/* components/song-item-v1/sonf-iten-v1.wxss */
.item{
  display: flex;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
  align-items: center;
}

.image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}

.content{
  margin-left: 16rpx;
  flex: 1;
}

.content .name{
  font-size: 32rpx;
  color: #555;
}

.content .source{
   margin-top: 16rpx;
   font-size: 24rpx;
   color: #999;
}

.arrow{
  margin-right: -24rpx;
}