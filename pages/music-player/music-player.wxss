/* pages/music-player/music-player.wxss */

.bg-image, .bg-cover{
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}

.bg-cover{
  background-color: rgba(0, 0, 0, .3);
  backdrop-filter: blur(14px);
}
/* 自定义导航 */
/* 
.nav-bar .status{
  height: 20px;
} */

.tabs{
  display: flex;
  font-size: 28rpx;
  color: #aaa;
}

.tabs .divder{
  margin: 0 8rpx;
}

.active{
  color: #fff;
}
/* 歌曲布局 */
.music{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
  font-size: 28rpx;
  color: #fff;
}

/* .music .album{
  flex: 1;
} */

.music .album .image{
  width: 100%;
  border-radius: 12rpx;
}

.music .info{
  margin-top: 60rpx;
}

.music .info .name{
  font-size: 48rpx;
}

.music .info .singer{
  margin-top: 10rpx;
}

.music .lyric{
  text-align: center;
  overflow: hidden;
  height: 100rpx;
  margin: 16rpx 0;
  font-size: 35rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.music .progress{
  margin: 12rpx 0;
}

.music .progress .slider{
  margin: 10rpx 10rpx 10rpx 18rpx;
}

.music .progress .time{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}
.music .control{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.music .control .btn{
  width: 60rpx;
  height: 60rpx;
}

.music .control .btn.play{
  width: 100rpx;
  height: 100rpx;
}

/* 歌词样式 */
.lyric-list{
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.lyric-list ::-webkit-scrollbar{
  display: none;
}

.lyric-list .item{
  margin-top: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0;
}

.lyric-list .item.active{
  color: #ff8189;
  font-size: 32rpx;
}

