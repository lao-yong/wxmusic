/* pages/detail-video/detail-video.wxss */
page{
  height: 100vh;
}
.video{
  width: 100%;
  /* position: fixed;
  top: 0;
  left: 0;
  z-index: 9999; */
}
.content{
  /* margin-top: 225px; */
  height: calc(100% - 225px);
}

.info .desc{
  width: 60%;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 40rpx;
  font-weight: 700;
}

.info .artist{
  font-size: 32rpx;
  color: rgb(116, 113, 110);
  margin: 7rpx 30rpx;
}

.info .count{
  font-size: 32rpx;
  color: rgb(116, 113, 110);
  margin: 7rpx 30rpx;
}
.recommend{
  margin: 30rpx 30rpx;
  font-size: 38rpx;
  font-weight: 500;
}


.video-list{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 0 10rpx;
  margin-top: -30rpx;
}

.video-list .item{
  width: 48%;
}